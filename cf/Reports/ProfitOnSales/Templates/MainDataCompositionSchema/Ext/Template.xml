		<dataSource>DataSource1</dataSource>
		<query>SELECT ALLOWED
	InventoryCostTurnovers.Recorder AS Recorder,
	InventoryCostTurnovers.SecondPeriod AS SecondPeriod,
	InventoryCostTurnovers.MinutePeriod AS MinutePeriod,
	InventoryCostTurnovers.HourPeriod AS HourPeriod,
	InventoryCostTurnovers.DayPeriod AS DayPeriod,
	InventoryCostTurnovers.WeekPeriod AS WeekPeriod,
	InventoryCostTurnovers.TenDaysPeriod AS TenDaysPeriod,
	InventoryCostTurnovers.MonthPeriod AS MonthPeriod,
	InventoryCostTurnovers.QuarterPeriod AS QuarterPeriod,
	InventoryCostTurnovers.HalfYearPeriod AS HalfYearPeriod,
	InventoryCostTurnovers.YearPeriod AS YearPeriod,
	InventoryCostTurnovers.Product AS Product,
	InventoryCostTurnovers.AmountExpense AS CostAmount,
	0 AS RevenueAmount
FROM
	AccumulationRegister.InventoryCost.Turnovers(, , Auto, ) AS InventoryCostTurnovers
WHERE
	InventoryCostTurnovers.Recorder REFS Document.SalesInvoice

UNION ALL

SELECT
	SalesTurnovers.Recorder,
	SalesTurnovers.SecondPeriod,
	SalesTurnovers.MinutePeriod,
	SalesTurnovers.HourPeriod,
	SalesTurnovers.DayPeriod,
	SalesTurnovers.WeekPeriod,
	SalesTurnovers.TenDaysPeriod,
	SalesTurnovers.MonthPeriod,
	SalesTurnovers.QuarterPeriod,
	SalesTurnovers.HalfYearPeriod,
	SalesTurnovers.YearPeriod,
	SalesTurnovers.Product,
	0,
	SalesTurnovers.AmountTurnover + SalesTurnovers.VATAmountTurnover
FROM
	AccumulationRegister.Sales.Turnovers(, , Auto, ) AS SalesTurnovers</query>
